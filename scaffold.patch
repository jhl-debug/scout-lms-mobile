+        <View className="px-4 py-6">
+          {[1,2,3,4,5].map((num) => (
+            <ModuleCard
+              key={num}
+              number={num}
+              title={MODULE_TITLES[num]}
+              duration={MODULE_DURATIONS[num]}
+              locked={num > 1}
+              onPress={() =>
+                num === 1
+                  ? navigation.navigate('PreviewModuleDetail')
+                  : navigation.navigate('UpsellModal')
+              }
+            />
+          ))}
+        </View>
+
+        <InstructorBioBlock />
+        <TestimonialCarousel />
+      </ScrollView>
+      <StickyBanner onPress={() => navigation.navigate('SignUp')} />
